{
  "name": "homebridge-vantage-modern",
  "version": "0.1.4",
  "description": "Modern TypeScript implementation of Vantage Controls support for Homebridge with updated dependencies.",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist",
    "config.schema.json"
  ],
  "keywords": [
    "homebridge-plugin",
    "homekit",
    "vantage",
    "home-automation"
  ],
  "engines": {
    "node": ">=18.0.0",
    "homebridge": ">=1.6.0"
  },
  "author": {
    "name": "Nathan Anderson"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clonked/homebridge-vantage"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "eslint src/**.ts",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "fast-xml-parser": "^4.3.2",
    "promise": "^8.3.0",
    "sprintf-js": "^1.1.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.0.2",
    "@eslint/js": "^8.57.0",
    "@types/debug": "^4.1.12",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0",
    "@types/sprintf-js": "^1.1.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "homebridge": "^2.0.0-beta.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "configSchema": {
    "type": "object",
    "properties": {
      "ipaddress": {
        "type": "string",
        "required": true,
        "format": "ipv4",
        "description": "IP address of the Vantage controller"
      },
      "username": {
        "type": "string",
        "description": "Username for authentication (if required)"
      },
      "password": {
        "type": "string",
        "description": "Password for authentication (if required)"
      },
      "omit": {
        "type": "string",
        "pattern": "^\\d+(,\\d+)*$",
        "description": "Comma-separated list of VIDs to omit"
      },
      "range": {
        "type": "string",
        "pattern": "^\\d+,\\d+$",
        "description": "Range of VIDs to include (format: min,max)"
      },
      "usecache": {
        "type": "boolean",
        "default": true,
        "description": "Use cached device configuration"
      },
      "debug": {
        "type": "boolean",
        "default": false,
        "description": "Enable debug logging"
      }
    }
  }
}
